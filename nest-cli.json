{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/lessons/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/lessons/tsconfig.app.json"
  },
  "projects": {
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "payments": {
      "type": "application",
      "root": "apps/payments",
      "entryFile": "main",
      "sourceRoot": "apps/payments/src",
      "compilerOptions": {
        "tsConfigPath": "apps/payments/tsconfig.app.json"
      }
    },
    "organizations": {
      "type": "application",
      "root": "apps/organizations",
      "entryFile": "main",
      "sourceRoot": "apps/organizations/src",
      "compilerOptions": {
        "tsConfigPath": "apps/organizations/tsconfig.app.json"
      }
    },
    "notifications": {
      "type": "application",
      "root": "apps/notifications",
      "entryFile": "main",
      "sourceRoot": "apps/notifications/src",
      "compilerOptions": {
        "assets": ["apps/notifications/templates/**/*"],
        "watchAssets": true,
        "tsConfigPath": "apps/notifications/tsconfig.app.json"
      }
    },
    "lessons": {
      "type": "application",
      "root": "apps/lessons",
      "entryFile": "main",
      "sourceRoot": "apps/lessons/src",
      "compilerOptions": {
        "tsConfigPath": "apps/lessons/tsconfig.app.json"
      }
    }
  },
  "monorepo": true,
  "root": "apps/lessons"
}